            <div class="widget-sidebar">
              <h3>Categories</h3>
              <ul>
                <li><%= link_to 'Blog Posts', blog_posts_path%></li>
                <li><%= link_to 'Food Categories', food_categories_path%></li>
                <li><%= link_to 'Foods', foods_path%></li>
                <% if current_user == nil %>
                <li><a href="/login"><i class="fa fa-sign-in"></i> Login</a>
                <% else %>
                <li><%= link_to 'Profile', user_path(current_user) %></li>
                  <% if current_user.admin == "125905" %>
                  <li><a href="/admin"><i class="fa fa-book"></i> Admin</a></li>
                  <% end %>
                </li>
                <% end %>
              </ul>
            </div>

            <div class="widget-sidebar">
              <h3>Archives</h3>
              <ul>
                <% folder = [] %>
                <% Archive.order("created_at asc").last(5).each do |archive| %>

                <% if folder.include?(archive.month.to_s) %>
                <% else %>
                  <li><a href="/archives/folder/<%= archive.month %>"><%= archive.month %></a> (<%= Archive.where(month: archive.month).count %>)</li>
                <% end %>
                <% folder << archive.month.to_s %>
                <%end%>
              </ul>
            </div>
            
        </div>
